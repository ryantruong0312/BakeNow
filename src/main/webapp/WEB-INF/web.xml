<?xml version="1.0" encoding="UTF-8"?>
<!--Note the new Jakarta EE schema
cf. https://stackoverflow.com/questions/4928271/how-to-install-jstl-the-absolute-uri-http-java-sun-com-jstl-core-cannot-be-r-->
<web-app metadata-complete="false" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd">
    <security-constraint>
    </security-constraint>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.bakenow.core.controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadProductController</servlet-name>
        <servlet-class>com.bakenow.core.controller.LoadProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadAllCategory</servlet-name>
        <servlet-class>com.bakenow.core.controller.RenderProductMarketPlaceController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadProductController</servlet-name>
        <url-pattern>/LoadProductController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadAllCategory</servlet-name>
        <url-pattern>/LoadAllCategory</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <resource-ref>
        <description>Azure SQL DB Connection</description>
        <res-ref-name>jdbc/AzureSQLDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>401</error-code>
        <location>/WEB-INF/errorpages/error401.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/WEB-INF/errorpages/error403.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/errorpages/error404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/errorpages/Exception.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/WEB-INF/errorpages/Exception.jsp</location>
    </error-page>
    <error-page>
        <location>/WEB-INF/errorpages/oh-snap.jsp</location>
    </error-page>
</web-app>
